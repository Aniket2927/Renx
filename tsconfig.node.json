{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist/server",
    "rootDir": ".",
    "target": "ES2018",
    "downlevelIteration": true,
    "types": ["node"]
  },
  "include": ["vite.config.ts", "server/**/*", "shared/**/*"],
  "exclude": ["server/**/*.test.ts", "server/**/*.spec.ts"]
} 